{
  "name": "watch-css-media",
  "version": "0.1.0",
  "description": "Provides an Observable stream that updates whenever the browser crosses a media-query threshold",
  "main": "index.js",
  "scripts": {
    "test": "node jasmine-runner.js",
    "build": "mkdir -p dist && babel src/watch-css-media.js -o dist/watch-css-media.js",
    "build-readme": "jsdoc2md src/*.js --template README.tpl > README.md",
    "doc": "jsdoc src/watch-css-media.js -d ./docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisbauer/watch-browser-size.git"
  },
  "keywords": [
    "media-query",
    "media-queries",
    "observable",
    "browser",
    "size-detection",
    "change-detection"
  ],
  "author": "Chris Bauer <cbauer@outlook.com> (http://github.com/chrisbauer)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chrisbauer/watch-browser-size/issues"
  },
  "homepage": "https://github.com/chrisbauer/watch-browser-size#readme",
  "dependencies": {
    "rxjs-es": "^5.0.0-beta.2"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.6.0",
    "exenv": "^1.2.0",
    "jasmine": "^2.4.1",
    "jasmine-spec-reporter": "^2.4.0",
    "jsdoc": "^3.4.0",
    "jsdoc-to-markdown": "^1.3.3",
    "lodash": "^4.6.1",
    "match-media-mock": "^0.1.0"
  }
}
